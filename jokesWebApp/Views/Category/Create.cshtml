@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
            <div class="mb-3 row">
                <label asp-for="Name" class="control-label">Category Name</label>
                <input type="text" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="DisplayOrder" class="control-label">Display Order</label>
                <input type="text" class="form-control" />
            </div>
            <div class="control-label">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-controller="Category" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>